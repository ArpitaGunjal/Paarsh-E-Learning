<script>
document.addEventListener('DOMContentLoaded', () => {
    const categoryTabs = document.querySelectorAll('.category-tab');
    const courseCards = document.querySelectorAll('.course-card-learn');
    const noCoursesMessage = document.querySelector('.no-courses-message');

    function filterCourses(selectedCategoryId) {
        let visibleCount = 0;

        courseCards.forEach(card => {
            const courseCategoryId = card.getAttribute('data-category-id');
            
            if (courseCategoryId === selectedCategoryId || selectedCategoryId === 'all') {
                card.style.display = 'block';
                visibleCount++;
            } else {
                card.style.display = 'none';
            }
        });

        if (noCoursesMessage) {
            noCoursesMessage.style.display = visibleCount === 0 ? 'block' : 'none';
        }
    }

    categoryTabs.forEach(tab => {
        tab.addEventListener('click', () => {
            // Remove active class from all tabs
            categoryTabs.forEach(t => t.classList.remove('active'));
            
            // Add active class to clicked tab
            tab.classList.add('active');

            // Get category ID and filter courses
            const categoryId = tab.getAttribute('data-category-id');
            filterCourses(categoryId);
        });
    });

    // Trigger initial filter on page load
    const defaultTab = document.querySelector('.category-tab.active');
    if (defaultTab) {
        const defaultCategoryId = defaultTab.getAttribute('data-category-id');
        filterCourses(defaultCategoryId);
    }
});
</script>

