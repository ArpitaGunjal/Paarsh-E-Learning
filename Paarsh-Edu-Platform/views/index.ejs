        <!-- COURSES GRID -->
        <div class="courses-grid-learn">

            <% const learnCourses = courses || []; %>

            <% if (learnCourses.length > 0) { %>
                <% learnCourses.forEach((course, index) => { 
                    const safeTitle = course.title || 'Course';
                    const categoryId = course.category?._id?.toString() || '';
                    const categoryName = course.category?.subDomain || 'General';
                %>

                <div class="course-card-learn" 
                     data-category-id="<%= categoryId %>" 
                     data-category-name="<%= categoryName %>" 
                     style="display: none;">
                    <a href="/courses/<%= course._id %>" class="course-link" style="text-decoration:none;">

